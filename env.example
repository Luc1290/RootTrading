# Configuration principale RootTrading - Infrastructure uniquement -




# --------------- A convertir en .env -----------------




# Mode de trading
TRADING_MODE=live

# API Binance
BINANCE_API_KEY="*****"
BINANCE_SECRET_KEY="*****"

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka
KAFKA_BROKER=kafka:9092
KAFKA_GROUP_ID=roottrading

# Base de données PostgreSQL
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=trading
PGHOST=db
PGPORT=5432

# Pool de connexions DB
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=50

# Logging
LOG_LEVEL=DEBUG

# Symboles de trading (par défaut)
DEFAULT_SYMBOL=BTCUSDC
TRADING_SYMBOLS=BTCUSDC,ETHUSDC,SOLUSDC,XRPUSDC,NEARUSDC,LINKUSDC,AAVEUSDC,DOGEUSDC

# Ports des services
GATEWAY_PORT=5010
ANALYZER_PORT=5012
SIGNAL_AGGREGATOR_PORT=5013
TRADER_PORT=5002
PORTFOLIO_PORT=8000
VISUALIZATION_PORT=5009
COORDINATOR_PORT=5003
DISPATCHER_PORT=5004

