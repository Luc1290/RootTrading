# Configuration principale RootTrading

# Mode de trading
TRADING_MODE=live        # demo ou live

# API Binance
BINANCE_API_KEY=****
BINANCE_SECRET_KEY=****

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CHANNEL_PREFIX=roottrading

# Kafka
KAFKA_BROKER=kafka:9092
KAFKA_GROUP_ID=roottrading

# Base de données PostgreSQL
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=trading
PGHOST=db
PGPORT=5432

# Paramètres de trading
SYMBOL=BTCUSDC
SYMBOLS=BTCUSDC,ETHUSDC,
INTERVAL=1m
TRADE_QUANTITY=0.00017

# Configuration des poches
POCKET_ACTIVE_PERCENT=60
POCKET_BUFFER_PERCENT=30
POCKET_SAFETY_PERCENT=10

# Paramètres des stratégies RSI
RSI_WINDOW=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Paramètres EMA Cross
SHORT_WINDOW=5
LONG_WINDOW=20

# Paramètres Bollinger Bands
BB_WINDOW=20
BB_STD=2.0

# Paramètres Ride or React
ROD_1H_THRESHOLD=0.8
ROD_3H_THRESHOLD=2.5
ROD_6H_THRESHOLD=3.6
ROD_12H_THRESHOLD=5.1
ROD_24H_THRESHOLD=7.8

# Logging
LOG_LEVEL=INFO

# Ports des services
GATEWAY_PORT=5000
ANALYZER_PORT=5001
TRADER_PORT=5002
PORTFOLIO_PORT=8000
FRONTEND_PORT=3000

# Ports des nouveaux services
COORDINATOR_PORT=5003
DISPATCHER_PORT=5004
LOGGER_PORT=5005
PNL_TRACKER_PORT=5006
RISK_MANAGER_PORT=5007
SCHEDULER_PORT=5008

# Logger
LOG_RETENTION_DAYS=30
LOG_EXPORT_DIR=./exports

# PnL Tracker
PNL_TRACKER_EXPORT_DIR=./exports
PNL_TUNING_RESULTS_DIR=./tuning_results

# Risk Manager
RISK_RULES_FILE=risk_manager/src/rules.yaml
RISK_CHECK_INTERVAL=60

# Scheduler
HEALTH_CHECK_INTERVAL=300
REPORT_DIR=./reports